<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relatively_db_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_black">
        <ImageButton
            android:id="@+id/search_db"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/color_black"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_search_white_24dp"/>

        <EditText
            android:id="@+id/search_edit_text_db"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/search_db"
            android:layout_alignBaseline="@id/search_db"
            android:layout_toRightOf="@+id/search_back_db"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/search_back_db"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/color_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/back_icon"/>



    </RelativeLayout>
    <ListView
        android:id="@+id/search_list_view_db"
        android:layout_below="@+id/relatively_db_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mylibary_borrow_bookself_Floating_db"
        app:backgroundTint="#000000"
        app:borderWidth="2dp"
        app:rippleColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_input_add"
        />

</RelativeLayout>
