<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativelayout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_black">
        <TextView
            android:id="@+id/mylibary_borrow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未归还书单"
            android:layout_toRightOf="@+id/mylibary_borrow_search_back"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/mylibary_borrow_search_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/color_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/back_icon"/>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mylibary_borrow_bookself_Floating"
        app:backgroundTint="#000000"
        app:borderWidth="2dp"
        app:rippleColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_input_add"
        />

    <ListView
        android:id="@+id/mylibary_borrow_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout_1"
        android:layout_alignParentStart="true">

    </ListView>

</RelativeLayout>