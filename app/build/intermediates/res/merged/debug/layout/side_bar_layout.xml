<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="528dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.42">
        <ImageView
            android:layout_width="@dimen/person_info_width"
            android:layout_height="wrap_content"
            android:background="@drawable/book1"
            />
        <ImageButton
            android:id="@+id/head_portrait"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"/>

        <TextView
            android:id="@+id/head_portrait_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_toRightOf="@+id/head_portrait"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/head_portrait_text_size"
            android:layout_centerVertical="true"
            android:text="登录"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/side_bar_listview"
        android:layout_width="@dimen/person_info_width"
        android:layout_height="450dp"
        android:background="@color/color_white"
        >
    </ListView>

</LinearLayout>
